
                    <div class="row">
                    {% for figure in figures.data %}
                        <div class="col-lg-2 col-md-6 col-sm-6">
                            
                            <div class="single-team-area">
                                <div class="team-thum">

                                {% for image in figure.linkedFigureImages %}
                                {% if image.mainImage == true %}
                                <img src=" {{ image.imageUrl }} " alt="">
                                {% endif %}
                                {% endfor  %}

                                </div>
                                <div class="team-content">
                                    <div class="team-share-top">
                                        <a href="{{ path('figure_details', {'slug': figure.slug } ) }}" class="shate-action-button"><i class="icofont-eye-alt"></i></a>
                                        <ul class="team-social-share">
                                            {% if app.user %}
                                                <li><a href="{{ path('figure_mods', {'id': figure.id } ) }}"><i class="icofont-edit"></i></a></li>
                                                <li><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-{{ figure.id }}"><i class="icofont-ui-delete"></i></button></li>
                                                {% include '_delete_modal.html.twig' with { 'btn_label': 'Supprimer la figure', 'btn_url': path('delete_fig', {'id': figure.id }), 'modalId': figure.id } %}
                                            {% endif %}
                                        </ul>
                                    </div>
                                    <div class="team-member-info">
                                        <h6 class="name-title">{{ figure.title }}</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                {% set path = 'app_pagination' %}
                {% set pages = figures.pages %}
                {% set currentPage = figures.page %}

                {% if pages > 1 %}

<center>
                <div id="replaceMe">
                <tr id="loadMore">
                    <td colspan="3">
                        <button class='btn' hx-get="{{ path(path, {page: currentPage + 1}) }}" 
                                            hx-trigger="click"
                                            hx-target="#replaceMe" 
                                            hx-swap="outerHTML">
                            Plus de figures<img class="htmx-indicator" src="/img/bars.svg">
                        </button>
                    </td>
                </tr> 
                </div>
                </center>
                {% endif %}
