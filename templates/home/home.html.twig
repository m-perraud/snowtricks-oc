{% extends 'base.html.twig' %}


{% block body %}

<div id="main-wrapper">
        <div class="site-wrapper-reveal">
            <div class="hero-area-two-wrapper">
                <!-- Hero Area Start -->
                <div class="hero-area-two hero-area-overly">
                    <div class="container">
                        <div class="col-lg-12">
                            <div class="hero-area--two-innter text-center">
                                <h2><span class="hero-title-small">ACCROCHE</span></h2>
                            </div>
                        </div>
                    </div>
                </div><!-- Hero Area End -->
        </div>
    </div>
</div>


<!-- Team Aare Start -->
            <div class="team-area section-space--ptb_100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title text-center" data-aos="fade-up">
                                <h6 class="sub-title-primary mb-20"></h6>
                                <h2 class="title">DÃ©couvrez les figures</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                    {% for figure in figures %}
                        <div class="col-lg-2 col-md-6 col-sm-6">
                            
                            <div class="single-team-area" data-aos="fade-up">
                                <div class="team-thum">

                                {% for image in figure.linkedFigureImages %}
                                {% if image.mainImage == true %}
                                <img src=" {{ image.imageUrl }}" alt="">
                                {% endif %}
                                {% endfor  %}

                                </div>
                                <div class="team-content">
                                    <div class="team-share-top">
                                        <a href="{{ path('figure_details', {'slug': figure.slug } ) }}" class="shate-action-button"><i class="icofont-eye-alt"></i></a>
                                        <ul class="team-social-share">
                                            <li><a href="{{ path('figure_mods', {'id': figure.id } ) }}"><i class="icofont-edit"></i></a></li>
                                            <li><a href="#"><i class="icofont-ui-delete"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="team-member-info">
                                        <h6 class="name-title">{{ figure.title }}</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </div>

            <tr id="replaceMe">
                <td colspan="3">
                    <button class='btn' hx-get="{{ path('app_pagination') }}" 
                                        hx-trigger="click"
                                        hx-target="#replaceMe" 
                                        hx-swap="outerHTML">
                        Charger plus de figures <img class="htmx-indicator" src="/img/bars.svg">
                    </button>
                </td>
            </tr> 

<div id="replaceMe"></div>

{% endblock %}
